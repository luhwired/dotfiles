{
  "workbench.colorTheme": "Theme Darker",
  "editor.fontFamily": "GeistMono Nerd Font",
  "editor.fontLigatures": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "editor.renderWhitespace": "trailing",
  "editor.fontSize": 14,
  "editor.minimap.enabled": false,
  "workbench.colorCustomizations": {
    "sideBar.foreground": "#ffffff",
    "sideBar.background": "#080808",
    "sideBar.border": "#080808",
    "sideBarTitle.foreground": "#ffffff",
    "activityBar.background": "#080808",
    "activityBar.foreground": "#ffffff",
    "activityBarBadge.background": "#ff0000",
    "activityBarBadge.foreground": "#ffffff",
    "editorGroupHeader.tabsBackground": "#080808",
    "editorGroupHeader.tabsBorder": "#080808",
    "tab.activeBackground": "#080808",
    "tab.activeForeground": "#ffffff",
    "tab.inactiveBackground": "#0f0f0f",
    "tab.inactiveForeground": "#ffffff",
    "editorLineNumber.foreground": "#ffffff",
    "editorLineNumber.activeForeground": "#ffffff",
    "editorCursor.foreground": "#ffffff",
    "editor.selectionBackground": "#413f3f",
    "editor.background": "#080808",
    "statusBar.background": "#080808",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.noFolderBackground": "#080808",
    "statusBar.debuggingBackground": "#FF0000",
    "statusBar.border": "#585858",
    "titleBar.activeBackground": "#080808",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#0f0f0f",
    "titleBar.inactiveForeground": "#CCCCCC",
    "window.activeBorder": "#FF0000",
    "window.inactiveBorder": "#888888"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "git.autofetch": true,
  "breadcrumbs.enabled": false,
  "window.menuBarVisibility": "compact"
}
